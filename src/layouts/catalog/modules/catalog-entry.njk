<section class="catalog-entry-content" id="{{ item.data.id }}">
    <figure>
        <img src="/images/{{ item.data.imglink }}" alt="">
        <figcaption>{{ item.data.title | lower }}</figcaption>
    </figure>
    <div class="module-content">
        <header>
            <h1>{{ item.data.title }}</h1>
            <p class="subtitle">{{ item.data.subtitle }}</p>
        </header>
        <div class="metadata">
            <p class="url">
                <a href="{{ item.data.url }}">Website</a>
            </p>
            <div class="shops">
                {% for shop in item.data.shop  %}
                    <p class="shop">
                        <a href="{{ shop.url }}">Shop {{ shop.place }}</a>
                    </p>
                {% endfor %}
            </div>
        </div>
        {% if item.data.introduction %}
            <div class="entry-content-introduction">{{ item.data.introduction | markdownify | safe }}</div>
        {% endif %}
        <div class="entry-content-text">{{ item.templateContent | safe }}</div>
    </div>
</section>
